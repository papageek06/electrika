{% extends 'base.html.twig' %}

{% block title %}Gestion des techniciens{% endblock %}

{% block body %}
  <div class="theCard">
      <h1 class="text-center">Gestion des techniciens</h1>

    <table class="table table-dark" style="background-color: rgba(231, 239, 245, 0.9);">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>HireDate</th>
                <th>Specialities</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for technician in technicians %}
            <tr>
                <td>{{ technician.id }}</td>
                <td>{{ technician.status }}</td>
                <td>{{ technician.hireDate ? technician.hireDate|date('Y-m-d') : '' }}</td>
                <td>{{ technician.specialities ? technician.specialities|join(', ') : '' }}</td>
                <td>
                    <a class="btn bg-success" href="{{ path('app_technician_show', {'id': technician.id}) }}">Voir</a>
                    <a class="btn bg-warning" href="{{ path('app_technician_edit', {'id': technician.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_technician_new') }}" class="btn btn-primary">Créer</a>
    </div>
{% endblock %}
