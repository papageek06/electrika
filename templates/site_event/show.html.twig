{% extends 'base.html.twig' %}

{% block title %}SiteEvent{% endblock %}

{% block body %}
    <h1>SiteEvent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site_event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ site_event.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ site_event.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ site_event.city }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ site_event.postalCode }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ site_event.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_site_event_index') }}">back to list</a>

    <a href="{{ path('app_site_event_edit', {'id': site_event.id}) }}">edit</a>

    <div>
    {% for event in events %}
        <a href="{{ path('app_event_show', {'id': event.id}) }}">{{ event.name }}</a>
    {% endfor %}
    </div>

    {{ include('site_event/_delete_form.html.twig') }}
{% endblock %}
