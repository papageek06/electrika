{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h2>Vos utilisateurs</h2>

   <section class="table-responsive  ">
    <table class="table ">
        <thead>
            <tr>
                <th class="MyCell">Id</th>
                <th class="MyCell">Email</th>
                <th class="MyCell">Roles</th>
                <th class="MyCell">Password</th>
                <th class="MyCell">FirstName</th>
                <th class="MyCell">LastName</th>
                <th class="MyCell">DateEntry</th>
                <th class="MyCell">Status</th>
                <th class="MyCell">IsVerified</th>
                <th class="MyCell">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="m-2">{{ user.id }}</td>
                <td class="m-2">{{ user.email }}</td>
                <td class="m-2">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="m-2">********</td>
                <td class="m-2">{{ user.firstName }}</td>
                <td class="m-2">{{ user.lastName }}</td>
                <td class="m-2">{{ user.dateEntry ? user.dateEntry|date('Y-m-d') : '' }}</td>
                <td class="m-2">{{ user.status }}</td>
                <td class="m-2">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td class="m-3">
                    <div class="d-flex ">
                    <a class="btn bg-success mb-1" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a class="btn bg-warning mb-1" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn bg-success" href="{{ path('app_user_new') }}">Create new</a>
   </section>
{% endblock %}
