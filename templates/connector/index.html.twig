{% extends 'base.html.twig' %}

{% block title %}Connector index{% endblock %}

{% block body %}
    <h2>Connector index</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Power</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for connector in connectors %}
            <tr>
                <td>{{ connector.id }}</td>
                <td>{{ connector.power }}</td>
                <td>{{ connector.type }}</td>
                <td>
                    <a href="{{ path('app_connector_show', {'id': connector.id}) }}">Voir</a>
                    <a href="{{ path('app_connector_edit', {'id': connector.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_connector_new') }}">Créer
{% endblock %}
