<div class=" bg-secondary p-0  ">
	<nav class="navbar navbar-expand-lg bg-secondary px-3" role="navigation" aria-label="Menu principal">
		<div class="container-fluid">
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav w-100 d-flex justify-content-between align-items-center">

					{% if app.user %}
						<li class="nav-item">
							<a class="nav-link{% if app.request.get('_route') == 'app_home' %} active{% endif %}" aria-current="{% if app.request.get('_route') == 'app_home' %}page{% endif %}" href="{{ path('app_home') }}">{{ 'nav.home'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_product_index') }}">{{ 'nav.stock'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_event_detail_index') }}">{{ 'nav.orders'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_cart') }}">{{ 'nav.prep'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_event_index') }}">{{ 'nav.events'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_site_event_index') }}">{{ 'nav.sites'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_contact_index') }}">{{ 'nav.contacts'|trans }}</a>
						</li>

						{# Nouveaux liens avec restrictions d'accès #}
						{% if is_granted('ROLE_INTERVENTION_TEAM') or is_granted('ROLE_TECHNICIAN') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_intervention_team_index') }}">{{ 'nav.intervention'|trans }}</a>
							</li>
						{% endif %}

						{% if is_granted('ROLE_TECHNICIAN') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_technician_index') }}">{{ 'nav.technician'|trans }}</a>
							</li>
						{% endif %}

						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_absence_index') }}">{{ 'nav.absence'|trans }}</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/admin">{{ 'nav.dashboard'|trans }}</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_user_index') }}">{{ 'nav.users'|trans }}</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_register') }}">{{ 'nav.register'|trans }}</a>
							</li>
						{% endif %}

						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_user_show' , {'id' : app.user.id}) }}">{{ 'nav.profile'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_galery_picture_index')}}">{{ 'nav.pictures'|trans }}</a>
						</li>
