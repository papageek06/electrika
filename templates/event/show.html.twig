<div class="col-11 col-md-4 card MyDiv m-0 m-md-2">
    <h3>BR (retour)</h3>

    {% if blQuantities is not empty %}
        <form id="form-br" method="POST" action="{{ path('app_event_quantity_update', { 'id': event.id }) }}">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Quantité livrée</th>
                        <th>Déjà retournée</th>
                        <th>Nouveau retour</th>
                    </tr>
                </thead>
                <tbody>
                    {% for productId, blQty in blQuantities %}
                        {% set product = eventDetails|filter(e => e.product.id == productId)|first.product %}
                        {% set brQty = brQuantities[productId] ?? 0 %}

                        <tr>
                            <td>{{ product.name }}</td>
                            <td>{{ blQty }}</td>
                            <td>{{ brQty }}</td>
                            <td>
                                <input type="number"
                                       name="newReturns[{{ productId }}]"
                                       value="0"
                                       min="0"
                                       class="form-control form-control-sm return-input"
                                       data-original="0">
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <button id="submit-return" class="btn btn-success mt-2" type="submit" disabled>
                Valider les retours
            </button>
        </form>
    {% else %}
        <p>Aucune livraison (BL) n’a encore été enregistrée pour cet événement.</p>
    {% endif %}
</div>


