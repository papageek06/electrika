{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category ? product.category.name : "N/A" }}</td>
            </tr>
            <tr>
                <th>StockInitial</th>
                <td>{{ product.stockInitial }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Hs</th>
                <td>{{ product.hs }}</td>
            </tr>
            <tr>
                <th>Lost</th>
                <td>{{ product.lost }}</td>
            </tr>
        </tbody>
    </table>

    <button class="bg-success" ><a href="{{ path('app_product_index') }}">back to list</a>

    

    
{% endblock %}
